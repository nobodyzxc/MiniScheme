CUR=`pwd`
DST=`dirname $0`
if [ -f ${DST}/src/main.c ]; then
    DST=${DST}/src
elif [ ! -f ${DST}/main.c ]; then
    echo "cannot find main.c under ${DST}"
    exit
fi

if [ ! -f ${DST}/main ]; then
    make -C${DST}
fi

if command -v rlwrap 1>/dev/null
    then rlwrap ${DST}/main $*
    else ${DST}/main $*
fi
